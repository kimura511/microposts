<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前:
  <%= f.text_field :name %>
  アドレス:
  <%= f.text_field :email %>
  プロフィール:
  <%= f.text_field :profile %>
  地域:
  <%= f.text_field :area %>

  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
