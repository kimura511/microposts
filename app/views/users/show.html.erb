<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
            <p>あなたのフォロー<%= link_to @followings.count, followings_user_path %>人</p>
            <p>あなたのフォロー<%= link_to "#{@users.count} 人" #, followings_user_path %></p>
            <p>あなたをフォロー<%= link_to @followers.count, followers_user_path %>人</p>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>